<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Add Category</title>
</head>
<body>
    <!-- NAVBAR -->
    <%- include('./navbarAdmin') %>

    <h1 style="text-align: center;">Tabel Product Admins</h1>
    <a href="/admins/addPrdoucts"> Add Product</a>

    <br>
    <br>
    <table class="table table-stripped">
        <tr>
            <th>No</th>
            <th>Name Product</th>
            <th>Description Product</th>
            <th>Denom</th>
            <th>Price</th>
            <th>imageUrl</th>
            <th>category Name</th>
            <th>company Name</th>
            <th colspan="2">Action</th>
        </tr>
             <% tabelProduct.forEach((el,i) => { %> 
            <tr>
                <td> <%=(i+1)%> </td>
                <td> <%=el.name%> </td>
                <td> <%=el.description%> </td>
                <td> <%=el.denom%> </td>
                <td> <%=el.price%> </td>
                <td> <%=el.imageUrl%> </td>
                <th> <%=el.CategoryId%></th>
                <th> <%=el.CompanyId%></th>
                <td> <a href="/admins/<%=el.id%>/editProducts">  <button class="btn btn-primary">  Edit  </button> </a> </td>
                <td> <a href="/admins/<%=el.id%>/deleteProducts">  <button class="btn btn-danger">  Delete  </button> </a> </td>
            </tr>
            <% }) %>
        
    </table>
</body>
</html>