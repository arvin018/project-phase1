        <form action="/users/buy/<%= data[0].id %>" method="post">
            <div class="row">
                <% data.forEach(el => { %>
                    <div class="col-4 my-4">
                        <!-- <button class="btn btn-warning"><%= el.denom %><hr><%= formatRupiah(el.price) %></button> -->
